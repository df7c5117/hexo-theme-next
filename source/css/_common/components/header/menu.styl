// Menu
// --------------------------------------------------
.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
}

.menu .menu-item {
  display: inline-block;
  margin: 0 10px;
  @media screen and (max-width: 767px) {
    margin-top: 10px;
  }

  a {
    display: block;
    font-size: 13px;
    text-transform: capitalize;
    line-height: inherit;
    color:#fff;
    border-bottom: 1px solid $menu-link-border;
    transition-property: border-color;
    the-transition();
    transition:0.4s ease-out;

    &:hover { color:#4fb4f7;}
  }

  .fa { margin-right: 5px; }
}

.use-motion .menu-item { opacity: 0; }

.popup{
  display: none;
  position:fixed;
  top:0px;
  left:0px;
  z-index:99999;
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.9);
  padding-top:15%;
  filter: blur(0px)!important
}
.popup-btn-close{
  font-size:2em;
  color:#fff;
}
.search-result-list{
  padding-left: 0px!important;
}
.search-keyword{
  color:#66ccff;
}
.search-result{
  color:#fff;
  width:90%;
}
.search-result a{
  color:#4fb4f7;
}
.tag-cloud {
  text-align: center;

  a {
    display: inline-block;
    margin: 10px;
    font-size: 1.1em!important;
    color: #4fb4f7!important;
    border:2px solid #4fb4f7;
    border-radius:35px;
    padding:0 15px;
    transition:0.4s ease-out;
  }
  a:hover {
    font-size: 1.1em!important;
    color: #fff!important;
    background-color:#4fb4f7;
  }
}